<div class="col-sm-5 col-lg-3">
<div class="card bg-primary text-light" style="background: #E5F0FF;">
    <div class="card-body">
      <h3 class="card-title mb-3"><%= c.className %> </h3>
      <p class="card-text lead"><span class="lead">Students: </span> <%= c.studentsNumber %></p>

      <div class="d-flex justify-content-around">
          <button
          class="btn btn-warning"
        >
          Open
        </button>

        <form action="/view-class" method="GET">
        <button
          class="btn btn-danger"
          data-bs-toggle="modal"
          data-bs-target="#delete-class-modal"
          type="submit"
        >
        </form>
          Delete
        </button>
      </div>
    </div>
  </div>
</div>